<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar.ejs', {auth: auth}) %>


    <div class="container">
        <h2 id="changepass">Altere a sua senha</h2>
       <% if(callback != null) { %> 
        
        <% if(callback.includes('sucesso')){ %> 
            <div class="creationAlert">
                <div class="alert alert-success alert-changePass" role="alert">
                    <%=callback%>
                </div>
            </div>
            <% } else { %> 
                <div class="creationAlert">
                    <div class="alert alert-danger alert-changePass" role="alert">
                        <%=callback%>
                    </div>
                </div>
                <% } %> 

            <div class="login-div l1">
                <form action="/alterarsenha" method="post">
                <input class="center-block" type="password" name="ap" id="ap" placeholder="Digite sua senha atual">
                <input class="center-block" type="password" name="p1" id="p1" placeholder="Agora a sua senha">
                <input class="center-block" type="password" name="p2" id="p2" placeholder="Confirme sua senha">
                <input type="submit" value="Alterar" class="btn btn-primary ml-btn">
                </form>
            </div>
        <% } else {%> 

            <div class="login-div l1">
                <form action="/alterarsenha" method="post">
                    <input class="center-block" type="password" name="ap" id="ap" placeholder="Digite sua senha atual">
                    <input class="center-block" type="password" name="p1" id="p1" placeholder="Agora a sua nova senha">
                    <input class="center-block" type="password" name="p2" id="p2" placeholder="Confirme sua nova senha">
                    <input type="submit" value="Alterar" class="btn btn-primary ml-btn">
                    </form>
            </div>

            <% } %> 
    </div>

</body>

</html>