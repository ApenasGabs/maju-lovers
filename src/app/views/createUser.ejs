<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar.ejs', {auth: auth}) %>

    <div class="container">
        <h1 id="login-title">Crie sua conta aqui!</h1>
    </div>

    <% if(callback != null){ %>

        <% if(callback.includes("e-mail")){ %> %> 
        <div class="creationAlert">
            <div class="alert alert-danger alert-createUser" role="alert">
                <%=callback%>
              </div>
        </div>

        <% } else{ %>
            <div class="creationAlert">
                <div class="alert alert-success alert-createUser" role="alert">
                    <%=callback%>
                  </div>
            </div>
        <% } %> 
            

        <div class="signup-div l1">
            <form action="/criar" method="post">
            <input class="center-block" type="text" name="nome" autoComplete="off" id="nome" placeholder="Nome">
            <input class="center-block" type="email" name="email" autoComplete="off" id="email" placeholder="E-mail">
            <input class="center-block" type="password" name="password"  autoComplete="off" id="password" placeholder="Senha">
            <input type="submit" value="Criar" class="btn btn-primary ml-btn">
            </form>
        </div>
      
    <% } else {%> 

    <div class="signup-div">
        <form action="/criar" method="post">
        <input class="center-block" type="text" name="nome" id="nome" placeholder="Nome">
        <input class="center-block" type="email" name="email" id="email" placeholder="E-mail">
        <input class="center-block" type="password" name="password" id="password" placeholder="Senha">
        <input type="submit" value="Criar" class="btn btn-primary ml-btn">
        </form>
    </div>

    <% } %> 

    
   
</body>

</html>